           android:textSize="20sp"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintVertical_bias="0.254" />

       <RadioGroup
           android:id="@+id/rd6"
           android:layout_width="253dp"
           android:layout_height="160dp"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintVertical_bias="0.393">

           <RadioButton
               android:id="@+id/rdAs17"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:minHeight="48dp"
               android:text="Repitiendo en voz alta." />

           <RadioButton
               android:id="@+id/rdAs18"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:minHeight="48dp"
               android:text="Escribiéndolo varias veces." />

           <RadioButton
               android:id="@+id/rdAs19"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:minHeight="48dp"
               android:text="Relacionándolo con algo, a poder ser divertido." />
       </RadioGroup>

       <Button
           android:id="@+id/btnContinuar2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Button" />
   </LinearLayout>

</ScrollView>