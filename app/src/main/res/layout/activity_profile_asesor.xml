<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileAsesor">
    <ScrollView
        android:layout_width="408dp"
        android:layout_height="529dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/boletaAsesorProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Boleta"
                android:textAlignment="center"
                android:textSize="48sp" />

            <TextView
                android:id="@+id/nameAsesorProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textAlignment="center"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/apPatAsesorProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="apPat"
                android:textAlignment="center"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/apMatAsesorProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="apMat"
                android:textAlignment="center"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/telefonoAsesorProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Telefono"
                android:textAlignment="center"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/mailAsesorProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mail"
                android:textAlignment="center"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/aprendizajeAsesorProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aprendizaje"
                android:textAlignment="center"
                android:textSize="34sp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>